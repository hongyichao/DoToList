<html>
<head>
    <title>
    </title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/ToDoStyle/appCss")
    
    
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#tsnavbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand">Job Cooper</span>
            </div>
            <div id="tsnavbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="taskMenuItem"><a href="#/">Tasks</a></li>
                    <li id="projectMenuItem"><a href="#/projects">Projects</a></li>
                    @*<li>@Html.ActionLink("API Index", "Index", "Help", new { area = "" }, null)</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
    </nav>
    <br /><br />
    <div class="container">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/todo")
    <script>
            $(document).ready(function () {
                $('ul.nav li a').on('click',
                function (e) {
                    $('#tsnavbar ul li').removeClass('active');
                    $(this).parent().addClass('active');
                });
            });

    </script>
</body>
</html>
