
<div class="container">

    <div class="row">
        <div class="col-md-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-2 control-label">
                        Username
                    </div>
                    <div class="col-md-10">
                        <input type="text" ng-model="userLoginEmail" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 control-label">
                        Password
                    </div>
                    <div class="col-md-10">
                        <input type="text" ng-model="userLoginPassword" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="Login" ng-click="loginUser()" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-1 col-md-11">
                        {{loginResponseData}}
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>