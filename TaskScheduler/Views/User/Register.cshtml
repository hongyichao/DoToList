
<div class="container">

    <div class="row">
        
        <div class="col-md-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-3 control-label">
                        Username
                    </div>
                    <div class="col-md-9">
                        <input type="text" ng-model="userRegisterEmail" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 control-label">
                        Password
                    </div>
                    <div class="col-md-9">
                        <input type="text" ng-model="userRegisterPassword" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3 control-label">
                        Confirm Password
                    </div>
                    <div class="col-md-9">
                        <input type="text" ng-model="userRegisterConfirmPassword" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="button" value="Register" ng-click="registerUser()" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        {{registerResponseData}}
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>